@model IEnumerable<AstillitaFeliz.Models.Clientes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Datos</h2>


<div class="container" style="background-color:coral">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.num_tarjeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tarjetaexpmes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tarjetaexpyear)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.num_tarjeta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tarjetaexpmes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tarjetaexpyear)
                </td>
                <td>

                    <a class="btn btn-info text-center" style="text-decoration:none" @Html.ActionLink("Modificar", "Edit", new { id = item.id_cliente })></a>
                </td>
            </tr>
        }

    </table>
    </div>