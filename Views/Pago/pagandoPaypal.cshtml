@using AstillitaFeliz.Models
@{
    ViewBag.Title = "pagandoPaypal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int idClient = Convert.ToInt32(Session["idClient"].ToString());
    string nombre = Session["usr"].ToString();
    List<Item> cart = (List<Item>)Session["cart"];
    var total = cart.Sum(item => item.product.precio * item.Cantidad);
}


<div class="container" style="background-color:coral">
    <div class="container" style="margin:2rem auto">
        <div>
            <img src="~/Img/logo-Paypal.png" width="150"
            height="90" />
        </div>
        <main>
            <p style="font-family:'Lucida Sans','Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:16px">
                <b>Bienvenido @nombre </b>
            </p>
            <div>Acepta el pago de:</div>
            <table class="table-striped table-bordered">

                <tr>
                    <td colspan="2" style="height:50px;padding:15px;">
                        <b style="font-family:'Lucida Sans','Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:16px">
                            La ASTILLITA FELIZ
                        </b>
                    </td>
                </tr>
                <tr>
                    <td class="info" style="height:25px;padding:15px;">
                        Importe en pesos
                    </td>
                    <td style="height:25px;padding:15px;"><b>@total</b></td>
                </tr>
            </table>
        </main>
        <div style="margin:auto">
            <a class="btn btn-info text-center" style="text-decoration:none" href=@Url.Action("pagoAceptado","Pago",new {idC=idClient })>Pagar</a>
            <a class="btn btn-info text-center" style="text-decoration:none" href=@Url.Action("pagoNoAceptado","Pago")>Cancelar</a>

        </div>
    </div>

</div>
