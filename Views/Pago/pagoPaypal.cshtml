
@{
    ViewBag.Title = "pagoPaypal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int idClient = Convert.ToInt32(Session["idClient"].ToString());

}

<h2>Inicie sesión en su cuenta de Paypal</h2>

<div class="container" style="background-color:coral">
    <div class="container">
        <img src="~/Img/logo-Paypal.png" style="margin:auto" width="150"
             height="90" />

        <form action="/action_page.php" style="margin:auto">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" placeholder="Introduzca correo" name="email">
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control" id="pwd" placeholder="Introduzca contraseña" name="pwd">
            </div>
            <div class="checkbox">
                <label><input type="checkbox" name="remember" />Recuerdame</label>
            </div>
            <a class="btn-block btn-info text-center" style="text-decoration:none" href=@Url.Action("pagandoPaypal","Pago",new {idC=idClient })>Entrar</a>
        </form>
    </div>
</div>