@model IEnumerable<CarpinteriaProyecto2.Models.categoria>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-family:'Century Gothic'; color:brown; font-size:3rem">Categorias</h2>
<hr />

<div class="container" style="background-color:coral">

    <div class="container" style=" font-family:'Century Gothic'; padding:20px; align-items:center">


        @foreach (var item in Model)
        {

            <div class="col-6 col-md-4" style="margin-top:20px; width: 300px">

                <div class="card" style="width: 25rem; height:45rem">
                    <img src="~/Img/Categorias/@Html.DisplayFor(modelItem => item.imagen)" class="card-img-top" alt="Portada" style=" height: 150px;">
                    <div class="card-body text-center">
                        <h5 class="card-title h3">@Html.DisplayFor(modelItem => item.nombre)</h5>
                        <p class="card-text h5 text-center">
                            Descripcion: @Html.DisplayFor(modelItem => item.descripcion)

                        </p>
                        <hr />
                        <a class="btn btn-primary" style="font-size:12px" href="@Url.Action("prodCategoria","FindProduct", new { id= item.Id_categoria,})">
                            Ver productos

                        </a>
                    </div>
                </div>
            </div>

        }
        <br>


    </div>
</div>